<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_item_view_workout_name_text_field"
            tools:text="Chest and triceps"
            android:textSize="16sp"
            android:textColor="@color/text_dark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day"
            android:id="@+id/schedule_item_view_workout_day_field"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule_item_view_workout_name_text_field"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:layout_marginStart="2sp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/schedule_item_view_workout_day_text_field"
            app:layout_constraintStart_toEndOf="@id/schedule_item_view_workout_day_field"
            app:layout_constraintTop_toBottomOf="@+id/schedule_item_view_workout_name_text_field"/>
</androidx.constraintlayout.widget.ConstraintLayout>

