<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="vzijden.workout.view.edit.workout.exercise.set.SetItemViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:id="@+id/schedule_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_item_view_text_View"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:fontFamily="@font/work_sans"/>

        <TextView
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/set_item_view_amount"
                app:layout_constraintStart_toEndOf="@+id/set_item_view_text_View"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="1"
                android:text="@{String.valueOf(viewModel.index)}"
                app:layout_constraintBaseline_toBaselineOf="@id/set_item_view_text_View"
                android:fontFamily="@font/work_sans_bold"/>

        <ImageButton
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/set_item_view_amount"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear"
                android:onClick="@{() -> viewModel.onDeleteClick()}"
                android:backgroundTint="@android:color/transparent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
