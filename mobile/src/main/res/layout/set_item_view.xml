<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="setItemViewModel"
                type="vzijden.workout.view.schedule.workout.exercise.set.SetViewModel"/>
    </data>

    <vzijden.workout.view.schedule.workout.exercise.set.SetView
            android:layout_gravity="center"
            android:id="@+id/schedule_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


        <TextView
                android:text="@string/reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_item_view_index"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:text="@string/reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_item_view_text_View"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/set_item_view_index"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/set_item_view_amount"
                app:layout_constraintStart_toEndOf="@+id/set_item_view_text_View"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <SeekBar
                android:max="@integer/max_set_reps"
                android:layout_height="wrap_content"
                android:id="@+id/set_item_view_seek_bar"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/set_item_view_amount"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>
    </vzijden.workout.view.schedule.workout.exercise.set.SetView>
</layout>
